

@{
    Layout = null;

}

<form method="post">

    <label>First Name</label>
    <input type="text" name="firstName" value="@ViewBag.Firstname" />
    &nbsp;&nbsp;

    <label>Language</label>
    <select>
        <option value="Hello" selected>English</option>
        <option value="Yasou">Greek</option>
        <option value="Namaste">Hindi</option>
        <option value="Guten tag">German</option>
        <option value="Hola">Spanish</option>
        <option value="Bonjour">French</option>
    </select>

    &nbsp; &nbsp;

    <button type="submit">Get Greeting</button>
</form>
</br>
</br>



<label style="font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif"><strong>Greeting:</strong></label>
<p style="font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif"> @ViewBag.Firstname</p>